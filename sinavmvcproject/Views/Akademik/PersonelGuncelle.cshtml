﻿@model sinavmvcproject.Models.Entity.akademikp
@{
    ViewBag.Title = "PersonelGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Akademik", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.isim)
        @Html.TextBoxFor(m => m.isim, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.soyisim)
        @Html.TextBoxFor(m => m.soyisim, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.kadı)
        @Html.TextBoxFor(m => m.kadı, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.sifre)
        @Html.TextBoxFor(m => m.sifre, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.id)
    <div style="margin-top: 10px">
        <button class="btn btn-info">Güncelle</button>
    </div>
}

